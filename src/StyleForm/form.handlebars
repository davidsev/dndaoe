<div id="StyleForm">
    <div id="Popup">
        <hex-alpha-color-picker class="color-only" id="ColorPicker"></hex-alpha-color-picker>
        <div id="Buttons">
            <button id="DefaultButton">Default</button>
            <button id="SaveButton">Save</button>
        </div>
    </div>
    <h2>shape:</h2>
    <div class="form-row two-columns">
        <label for="shapeFillColor">Fill:</label>
        <div class="input">
            <div class="color-box" id="shapeFillColor"></div>
        </div>
        <label for="shapeStrokeColor">Outline:</label>
        <div class="input">
            <div class="color-box" id="shapeStrokeColor"></div>
        </div>
    </div>
    <h2>affected squares:</h2>
    <div class="form-row two-columns">
        <label for="areaFillColor">Fill:</label>
        <div class="input">
            <div class="color-box" id="areaFillColor"></div>
        </div>
        <label for="areaStrokeColor">Outline:</label>
        <div class="input">
            <div class="color-box" id="areaStrokeColor"></div>
        </div>
    </div>
</div>
